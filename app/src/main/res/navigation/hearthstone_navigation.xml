<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hearthstone_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.projecthearthstone.presentation.home.HomeHearthstoneFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home_hearthstone">


        <action
            android:id="@+id/action_HomeHearthstoneFragment_to_InsiderHearthstoneFragment"
            app:destination="@+id/navigation_insider" />

    </fragment>


    <fragment
        android:id="@+id/navigation_insider"
        android:name="com.example.projecthearthstone.presentation.insider.InsiderHearthstoneFragment"
        android:label="@string/title_insider"
        tools:layout="@layout/fragment_insider_hearthstone" />

</navigation>